<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_characters"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_initial_loading_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/error_loading_characters"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textAlignment="center"
        android:layout_margin="16dp"
        app:drawableTopCompat="@drawable/ic_dissatisfied"
        app:drawableTintMode="@integer/material_motion_duration_long_2" />

    <Button
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_700"
        android:text="@string/common_try_again"/>



</LinearLayout>